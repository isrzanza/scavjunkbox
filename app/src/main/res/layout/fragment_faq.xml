<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/faq_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.faq.FaqFragment" >

    <TextView
        android:id="@+id/faq_title_textView"
        style="@style/TarkovTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/faq_fragment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faq_title_textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/faq_q_1_textView"
                style="@style/Faq_question"
                android:text="@string/faq_q_1" />

            <TextView
                android:id="@+id/faq_a_1_textView"
                style="@style/Faq_answer"
                android:text="@string/faq_a_1" />

            <TextView
                android:id="@+id/faq_q_2_textView"
                style="@style/Faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q_2" />

            <TextView
                android:id="@+id/faq_a_2_textView"
                style="@style/Faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a_2" />

            <TextView
                android:id="@+id/faq_q_5_textView"
                style="@style/Faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q_5" />

            <TextView
                android:id="@+id/faq_a_5_textView"
                style="@style/Faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a_5" />

            <TextView
                android:id="@+id/faq_q_3_textView"
                style="@style/Faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q_3" />

            <TextView
                android:id="@+id/faq_a_3_textView"
                style="@style/Faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a_3" />

            <TextView
                android:id="@+id/faq_q_4_textView"
                style="@style/Faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q_4" />

            <TextView
                android:id="@+id/faq_a_4_textView"
                style="@style/Faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a_4" />

            <TextView
                android:id="@+id/faq_q_6_textView"
                style="@style/Faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q_6" />

            <TextView
                android:id="@+id/faq_a_6_textView"
                style="@style/Faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a_6" />

            <TextView
                android:id="@+id/faq_q_7_textView"
                style="@style/Faq_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_q_7" />

            <TextView
                android:id="@+id/faq_a_7_textView"
                style="@style/Faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_a_7" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>